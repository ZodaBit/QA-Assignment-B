		{
			"name": "Positive - Retrieve Pet by Valid ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse response once",
							"const jsonData = pm.response.json();",
							"const expectedPetId = pm.environment.get(\"petId\");",
							"",
							"// Group all GET validations into a single test block",
							"pm.test(\"GET /pet/{{petId}} - Validate response\", () => {",
							"    // ✅ Status code",
							"    pm.response.to.have.status(200);",
							"",
							"    // ✅ Response structure",
							"    pm.expect(jsonData).to.have.all.keys(\"id\", \"category\", \"name\", \"photoUrls\", \"tags\", \"status\");",
							"    pm.expect(jsonData.category).to.have.all.keys(\"id\", \"name\");",
							"    pm.expect(jsonData.tags[0]).to.have.all.keys(\"id\", \"name\");",
							"",
							"    // ✅ Validate values",
							"    pm.expect(jsonData.id).to.eql(expectedPetId);",
							"    pm.expect(jsonData.name).to.be.a(\"string\").and.not.empty;",
							"    pm.expect(jsonData.category.name).to.eql(\"Dogs\");",
							"    pm.expect(jsonData.status).to.eql(\"available\");",
							"",
							"    // ✅ Validate arrays",
							"    pm.expect(jsonData.photoUrls).to.be.an(\"array\").that.includes(\"https://example.com/dog.jpg\");",
							"    pm.expect(jsonData.tags[0].name).to.eql(\"friendly\");",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
