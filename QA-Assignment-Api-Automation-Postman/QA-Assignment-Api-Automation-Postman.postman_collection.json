		{
			"name": "Positive - Create Pet with Dynamic Data",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"randomId\", _.random(1000, 9999));",
							"pm.variables.set(\"petName\", \"Green-\" + pm.variables.replaceIn('{{$randomFirstName}}'));",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse response once",
							"const jsonData = pm.response.json();",
							"// Save the pet id into environment variable",
							"pm.environment.set(\"petId\", jsonData.id);",
							"// Group all tests",
							"pm.test(\"Positive test: Pet created successfully\", function () {",
							"    // 1️⃣ Status code",
							"    pm.response.to.have.status(200);",
							"",
							"    // 2️⃣ Check all keys exist",
							"    pm.expect(jsonData).to.have.all.keys(\"id\", \"category\", \"name\", \"photoUrls\", \"tags\", \"status\");",
							"",
							"    // 3️⃣ Values match expected",
							"    pm.expect(jsonData.id).to.eql(pm.variables.get(\"randomId\"));",
							"    pm.expect(jsonData.name).to.eql(pm.variables.get(\"petName\"));",
							"    pm.expect(jsonData.category.name).to.eql(\"Dogs\");",
							"    pm.expect(jsonData.tags[0].name).to.eql(\"friendly\");",
							"    pm.expect(jsonData.status).to.eql(\"available\");",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": {{randomId}},\n  \"category\": { \"id\": 1, \"name\": \"Dogs\" },\n  \"name\": \"{{petName}}\",\n  \"photoUrls\": [\"https://example.com/dog.jpg\"],\n  \"tags\": [{ \"id\": 1, \"name\": \"friendly\" }],\n  \"status\": \"available\"\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet",
					"protocol": "https",
					"host": [
						"petstore",
						"swagger",
						"io"
					],
					"path": [
						"v2",
						"pet"
					]
				}
			},
			"response": []
